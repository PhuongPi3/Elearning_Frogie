<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/heart_notification_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_notification_background"
    android:elevation="0dp">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tùy chọn trái tim"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:gravity="center_horizontal"
    android:layout_marginBottom="12dp" />

    <LinearLayout
        android:id="@+id/ll_watch_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_gray_border_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_play"
            android:layout_marginEnd="8dp"
            android:contentDescription="Watch Ad Icon"
            app:tint="#647D4E" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xem quảng cáo - nhận trái tim"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_practice_for_heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_gray_border_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_practice_line"
            android:layout_marginEnd="8dp"
            android:contentDescription="Practice Icon"
            app:tint="#647D4E" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Luyện tập để nhận tim"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:backgroundTint="#E0E0E0"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

</LinearLayout>